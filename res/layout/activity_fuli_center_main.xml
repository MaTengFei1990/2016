<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background"
   >
    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bottom_bar_taobao_bg"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/rg_botton_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
               android:id="@+id/layout_new_good"
                android:drawableTop="@drawable/selector_menu_item_new_good"
                style="@style/menu_item_style"
                android:text="新品"
                android:button="@null"
                android:textColor="@color/main_botton_text_color"
                android:checked="true"/>
            <RadioButton
               android:id="@+id/layout_boutique"
                android:drawableTop="@drawable/selector_menu_item_boutique"
                style="@style/menu_item_style"
                android:text="精选"
                android:button="@null"
                android:textColor="@color/main_botton_text_color"
                android:checked="false"/>
            <RadioButton
               android:id="@+id/layout_category"
                android:drawableTop="@drawable/selector_menu_item_new_good"
                style="@style/menu_item_style"
                android:text="分类"
                android:button="@null"
                android:textColor="@color/main_botton_text_color"
                android:checked="false"/>
            <RelativeLayout

                style="@style/style_menu_item"
                >
                <RadioButton
                    android:id="@+id/cart"
                    android:drawableTop="@drawable/selector_menu_item_cart"
                    style="@style/menu_item_style_cart"
                    android:text="购物车"
                    android:textColor="@color/main_botton_text_color"
                    android:button="@null"
                    android:checked="false"/>
                <LinearLayout
                    android:id="@+id/shopping_cart_mum_bg"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/tvCarHint"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/cart_hint"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:paddingLeft="50dp"
                        android:text="1300"
                        android:textColor="#fff"
                        android:textSize="12dp"
                        android:visibility="gone"/>

                </LinearLayout>
            </RelativeLayout>


            <RadioButton
               android:id="@+id/layout_personcenter"
                android:drawableTop="@drawable/selector_menu_item_personal_center"
                style="@style/menu_item_style"
                android:text="我"
                android:button="@null"
                android:textColor="@color/main_botton_text_color"
                android:checked="false"/>


        </RadioGroup>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_above="@id/main_bottom"/>

</RelativeLayout>
